<!-- what is linc -->
 <div class="fdb-block block-background" data-block-type="contents" data-id="1" draggable="true">
  <div class="col-fill" style="background-image: url(https://res.cloudinary.com/lynn-de-souza/image/upload/v1554221422/LINC%20website/Home/NDS_8842-18.jpg);">
