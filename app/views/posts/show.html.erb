<h1><%= @post.title %></h1>
<article class=”post”>
 <%= image_tag @post.image_url.to_s, alt: "Image", class: "img-responsive" %>
  <p><%= @post.content %></p>
  <%= link_to "Edit", edit_post_path(@post) %>

  <%= link_to "Delete", delete_path(@post),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
</article>
